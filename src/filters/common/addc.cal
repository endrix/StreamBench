package filters.common;

import filters.common.constants.*;

actor addc(int constant) int(size=SAMPLE_SZ) operand_1 ==> int(size=SAMPLE_SZ) result :

	action operand_1:[ x ] ==> result:[ x + constant ]
	end

end
