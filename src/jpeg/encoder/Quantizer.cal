package jpeg.encoder;

import jpeg.encoder.common.Tables.inv_zigzag;
import jpeg.encoder.common.Tables.QT;
import jpeg.encoder.common.Tables.DivTab;

actor Quantizer()
	int(size=32) In
		==> 
			int(size=24) Out:		
	int(size=4) Block_Type := 0; // Block_Type = 0,1,2,3 (Luma), Block_Type = 4,5 (Chroma)
	
	int(size=13) data[64];
	
	int(size=9) Counter := 0;
	
	
	read: action In:[token] ==>
	do
		data[Counter] := token;
		Counter := Counter + 1;
	end
	
	finish: action ==>
	guard
		Counter = 64
	do
		Counter := 0;
	end
	
	int(size=13) dataCounter;
	
	bool negative := false;
	
	int(size=8) qt;
	send: action ==> 
	do
		qt := QT[Block_Type >> 2][Counter];
		dataCounter := data[inv_zigzag[Counter]];
		if dataCounter > 0 then
			dataCounter := dataCounter + (qt >> 2);
			negative := false;
		else 
			dataCounter := -(dataCounter - (qt >> 2));
			negative := true;
		end
	end
	
	
	
	division: action ==> Out:[out]
	var
		int(size=24) out
	do 
		out := (dataCounter * DivTab[qt - 1]) >> 16;
		if negative then
			out := -out;
		end
		Counter := Counter + 1;
	end
		
	changeBlock: action ==>
	do
		Block_Type := (Block_Type + 1);
		if Block_Type = 6 then
			Block_Type := 0;
		end
	end
	
	
	schedule fsm s0:
		s0	(read)	--> s0;
		s0	(finish)	--> s1;
		s1	(send)	--> division;
		division (division) -->s1;
		s1	(finish)	--> s2;
		s2	(changeBlock)	--> s0;
	end
	
	priority
		finish > read;
		finish > send;
	end
end